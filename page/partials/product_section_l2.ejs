<div
  id="<%- id -%>"
  data-menu-text="<%- menu_text -%>"
  class="section product product-l2<% if (white===true) { %> bg-white<% } %>"
  <% if (bg_url) { %> style="background-image: url('<%- bg_url -%>')" <% } %>
>
  <div class="container">
    <div class="product-l2-bg">
      <img
        src="/assets/hex-bg/v_h.svg"
      />
    </div>
    <div class="cf-row">
      <div class="cf-md-5 with-background-text">
        <% if (backgroundText!==undefined && backgroundText!=="") {%>
          <div class="background-text"><%- backgroundText -%></div>
        <% } %>
        <div class="text-box<% if (purple_title===true) { %> text-box-purple<% } %>">
            <h5><%- title -%></h5>
            <div class="underline"></div>
        </div> <!-- end text box -->
        <h3><%- headline -%></h3>

        <% for(var i=0; i < paragraphs.length; i++) {%>
          <p>
            <%- paragraphs[i] -%>
          </p>
        <% } %>

      </div>
      <div class="cf-md-7">
        <div class="product-l2-row-wrapper">
          <div class="product-l2-1">
            <img
              class="img-responsive img-scroll"
              src="/assets/<%- images[0][0].url -%>"
              srcset="/assets/<%- images[0][1].url -%> <%- images[0][1].width -%>w, /assets/<%- images[0][2].url -%> <%- images[0][2].width -%>w"
            />
          </div>
          <div class="product-l2-2">
            <img
              class="img-responsive img-scroll"
              src="/assets/<%- images[1][0].url -%>"
              srcset="/assets/<%- images[1][1].url -%> <%- images[1][1].width -%>w, /assets/<%- images[1][2].url -%> <%- images[1][2].width -%>w"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
