<div class="how-it-works section <% if (id == 'how-it-works') { %> shadow-background <% } %>" id="<%- id %>">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="section-title"><%- title %></h2>
            </div>
            <div class="col-md-offset-1 col-md-4">
                <div class="content">
                    <div class="text">
                        <%- content %>
                    </div>
                </div>
            </div>
            <div class="col-md-offset-1 col-md-6">
              <%- include('../blocks/hi-res-img', { path: imgPath, alt: title, cls: "img-responsive image" })%>
            </div>
        </div>
    </div>
</div>
