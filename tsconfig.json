{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "experimentalDecorators": true
    },
    "include": [
        "./node_modules/web3-typescript-typings/index.d.ts",
        "./app/**/*",
        "./page/ts/**/*",
        "./test/**/*"
    ]
}
